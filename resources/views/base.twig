<body>
<div id="container">
    <!-- top bar -->
    <div class="topbar_wrap" id="fix_div">
        <div class="topbar_ins" id="fix_elem">
            <div class="topbar">
                {% if auth_check() %}
                    <a href="{{ route('logout') }}" class="toplink">Выйти</a>
                    <a href="{{ route('user.account') }}" class="userlogin">{{ auth_user().email }}</a>
                {% else %}
                    <a class="toplink" href="{{ route('register') }}">Регистрация</a>
                    <a class="toplink" href="{{ route('login') }}">Авторизация</a>
                {% endif %}

                <div class="clear"></div>
            </div>
        </div>
    </div><!-- end top bar -->
    <!-- top menu -->
    <div class="tophead_wrap">
        <div class="tophead_ins">
            <div class="tophead">
                <div class="logoblock">
                    <div class="logoblock_ins">
                        <a href="{{ route('index') }}"><img alt="" src="{{ asset('images/logo.png') }}"></a>
                    </div>
                </div>
                <div class="topmenu">
                    <ul class="tmenu js_menu" id="menu-verhnee-menyu">
                        <li class="menu-item menu-item-type-post_type menu-item-object-page {% if active('index') %} current-menu-item {% endif %}" id="menu-item-409">
                            <a href="{{ route('index') }}"><span>Обмен</span></a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page {% if active('news') %} current-menu-item {% endif %}">
                            <a href="{{ route('news') }}"><span>Новости</span></a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page {% if active('reviews') %} current-menu-item {% endif %}">
                            <a href="{{ route('reviews') }}"><span>Отзывы</span></a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page {% if active('tariffs') %} current-menu-item {% endif %}">
                            <a href="{{ route('tariffs') }}"><span>Курсы</span></a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page {% if active('feedback') %} current-menu-item {% endif %}">
                            <a href="{{ route('feedback') }}"><span>Контакты</span></a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page {% if active('affiliate') %} current-menu-item {% endif %}">
                            <a href="{{ route('affiliate') }}"><span>Партнёрам</span></a>
                        </li>
                    </ul>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <!-- end top menu -->

    <div class="wrapper">
        {% block wrapper %}

        <div class="contentwrap">
            <div class="thecontent">
                {{ block('content') }}
            </div>

            <div class="sidebar">
                {% block sidebar %}
                    {% if auth_check() %}
                        <div class="user_widget">
                            <div class="user_widget_ins">

                                <div class="user_widget_title">
                                    <div class="user_widget_title_ins">
                                        Личный кабинет
                                    </div>
                                </div>

                                <div class="user_widget_body">
                                    <div class="user_widget_body_ins">
                                        <ul>
                                            <li {% if active('user.account') %}class="current"{% endif %}><a href="{{ route('user.account') }}">Личный кабинет</a></li>
                                            <li {% if active('user.wallets') %}class="current"{% endif %}><a href="{{ route('user.wallets') }}">Ваши счёта</a></li>
                                            <li {% if active('user.operations') %}class="current"{% endif %}><a href="{{ route('user.operations') }}">Ваши операции</a></li>
                                        </ul>
                                        <div class="user_widget_exit">
                                            <a href="{{ route('logout') }}" class="exit_link">Выйти</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="user_widget">
                            <div class="user_widget_ins">

                                <div class="user_widget_title">
                                    <div class="user_widget_title_ins">
                                        Партнёрский кабинет
                                    </div>
                                </div>

                                <div class="user_widget_body">
                                    <div class="user_widget_body_ins">
                                        <ul>
                                            <li {% if active('partner.account') %}class="current"{% endif %}><a href="{{ route('partner.account') }}">Партнёрский аккаунт</a></li>
                                            <li {% if active('partner.referrals') %}class="current"{% endif %}><a href="{{ route('partner.referrals') }}">Рефералы</a></li>
                                            <li {% if active('partner.exchanges') %}class="current"{% endif %}><a href="{{ route('partner.exchanges') }}">Партнёрские обмены</a></li>
                                            <li {% if active('partner.transitions') %}class="current"{% endif %}><a href="{{ route('partner.transitions') }}">Партнёрские переходы</a></li>
                                            <li {% if active('partner.balance') %}class="current"{% endif %}><a href="{{ route('partner.balance') }}">Внутренний счёт</a></li>
                                            <li {% if active('partner.payouts') %}class="current"{% endif %}><a href="{{ route('partner.payouts') }}">Вывод партнёрских средств</a></li>
                                            <li {% if active('partner.banners') %}class="current"{% endif %}><a href="{{ route('partner.banners') }}">Рекламные материалы</a></li>
                                            <li {% if active('partner.terms') %}class="current"{% endif %}><a href="{{ route('partner.terms') }}">Условия участия в партнёрской программе</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="user_widget">
                            <div class="user_widget_ins">

                                <div class="user_widget_title">
                                    <div class="user_widget_title_ins">
                                        Полезная информация
                                    </div>
                                </div>

                                <div class="user_widget_body">
                                    <div class="user_widget_body_ins">
                                        {{ alert }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endblock sidebar %}
            </div>

            <div class="clear"></div>
        </div>

        {% endblock wrapper %}
    </div>

    <!-- footer -->
    <div class="footer_wrap">
        <div class="footer">
            <div class="footer_left">
                <div class="copyright">
                    © {{ year() }} {{ contacts.project }} — сервис обмена валют
                </div>
                <div class="footer_menu">
                    <ul class="fmenu" id="menu-nizhnee-menyu">
                        <li class="menu-item menu-item-type-post_type menu-item-object-page">
                            <a href="{{ route('rules') }}"><span>Правила</span></a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page">
                            <a href="{{ route('notice') }}"><span>Предупреждение</span></a>
                        </li>
                    </ul>
                    <div class="clear"></div>
                </div>
                <div class="footer_menu">
                    <ul class="fmenu" id="menu-nizhnee-menyu">
                        <li class="menu-item menu-item-type-post_type menu-item-object-page">
                            <a href="{{ route('sitemap') }}"><span>Карта сайта</span></a>
                        </li>
                        <li class="menu-item menu-item-type-post_type menu-item-object-page">
                            <a href="{{ route('partners') }}"><span>Партнеры</span></a>
                        </li>
                    </ul>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="footer_center">
                <a class="social_link" href="http://vk.com/share.php?url={{ route('index') }}" rel="nofollow" target="_blank">
                    <img alt="vkontakte icon" src="{{ asset('images/social/vk-ico.png') }}">
                </a>
                <a class="social_link" href="https://www.facebook.com/sharer/sharer.php?u={{ route('index') }}" rel="nofollow" target="_blank">
                    <img alt="facebook icon" src="{{ asset('images/social/fb-ico.png') }}">
                </a>
                <a class="social_link" href="https://plus.google.com/share?url={{ route('index') }}" rel="nofollow" target="_blank">
                    <img alt="google plus icon" src="{{ asset('images/social/gp-ico.png') }}">
                </a>
                <a class="social_link" href="http://twitter.com/share?url={{ route('index') }}" rel="nofollow" target="_blank">
                    <img alt="twitter icon" src="{{ asset('images/social/tw-ico.png') }}">
                </a>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div><!-- end footer -->
</div>

</body>
</html>